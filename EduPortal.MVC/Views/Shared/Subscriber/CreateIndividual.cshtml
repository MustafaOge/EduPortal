@using EduPortal.MVC.Models.Subscriber
@model SubsIndividual

<div class="row">
    <form method="post" asp-controller="Subscriber" asp-action="CreateIndividual">
        <div class="container p-5 my-5 border">

            <label>@_localization.Getkey("IndividualSubscription")</label>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="NameSurname" id="nameSurnameLabel">@_localization.Getkey("NameSurname")</label>
                        <input asp-for="NameSurname" type="tel" class="form-control" placeholder="@_localization.Getkey("NameSurname")">
                        <span asp-validation-for="NameSurname" class="text-danger"></span>
                    </div>
                </div>

                <div class="col">
                    <div class="form-group">
                        <label asp-for="IdentityNumber" id="identityNumberLabel">@_localization.Getkey("IDNumber")</label>
                        <input asp-for="IdentityNumber" type="tel" class="form-control" placeholder="@_localization.Getkey("IDNumber")">
                        <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="col">
                    <div class="form-group">
                        <label asp-for="CounterNumber">@_localization.Getkey("CounterNumber")</label>
                        <input asp-for="CounterNumber" type="tel" class="form-control" placeholder="@_localization.Getkey("CounterNumber")">
                        <span asp-validation-for="CounterNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="PhoneNumber" id="phoneNumberLabel">@_localization.Getkey("PhoneNumber")</label>
                        <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="@_localization.Getkey("PhoneNumber")">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="BirthDate" id="birthDateLabel">@_localization.Getkey("BirthDate")</label>
                        <input asp-for="BirthDate" type="date" class="form-control" placeholder="@_localization.Getkey("BirthDate")">
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Email" id="emailLabel">@_localization.Getkey("EmailAddress")</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="@_localization.Getkey("EmailAddress")">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="SubscriberType" value="Bireysel" />
                @* <input type="hidden" asp-for="Discriminator" value="Bireysel" /> *@



            </div>
        </div>

        <div class="col-12 mb-3 text-left">
            <a asp-action="CreateFakeData" class="btn btn-dark btn-sm"><i class="fa fa-cog mr-2"></i>Create Fake Data</a>
        </div>

        <div class="col-12 mb-3 text-left">
            <a asp-controller="Home" asp-action="Get" class="btn btn-dark btn-sm"><i class="fa fa-cog mr-2"></i>Get Cache Data</a>
        </div>
        <div class="col-12 mb-3 text-left">
            <a asp-controller="Home" asp-action="SubcriberPublishGet" class="btn btn-dark btn-sm"><i class="fa fa-cog mr-2"></i>Get Publisher Message</a>
        </div>

        <div class="col-12 mb-3 text-left">
            <a asp-controller="Home" asp-action="Set" value="Bireysel" class="btn btn-dark btn-sm"><i class="fa fa-cog mr-2"></i>Set Fake Data</a>
        </div>



        <div class="form-group float-right">
            <a asp-action="Index" class="btn btn-secondary btn-sm"><i class="fa fa-arrow-left mr-2"></i> Back To List</a>
            <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save mr-2">     </i> Create</button>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
