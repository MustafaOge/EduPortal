@using EduPortal.Domain.Entities

@model SubsCorporate

<form method="post" asp-controller="Invoice" class="corporate-find" asp-action="PaymentCorporate">
    <div class="form-group">
        <label for="TaxIdOrCounterNumber">@_localization.Getkey("TaxID") / @_localization.Getkey("CounterNumber"):</label>
        <input type="text" class="form-control" id="TaxIdOrCounterNumber" name="TaxIdOrCounterNumber">
    </div>
    <button type="submit" asp-controller="Invoice" asp-action="PaymentCorporate" class="btn btn-primary">@_localization.Getkey("Fetch Information")</button>
</form>

<div class="col">
    @if (Model != null)
    {
        <table class="table table-bordered table-hover table-sm">
            <thead>
                <tr>
                    <th>@_localization.Getkey("CorporateName")</th>
                    <th>@_localization.Getkey("PhoneNumber")</th>
                    <th>@_localization.Getkey("TaxID")</th>
                    <th>@_localization.Getkey("CounterNumber")</th>
                    <th>@_localization.Getkey("SubscriberType")</th>
                    <th>@_localization.Getkey("Invoices")</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td> @Model.CorporateName </td>
                    <td> @Model.PhoneNumber </td>
                    <td> @Model.TaxIdNumber </td>
                    <td> @Model.CounterNumber </td>
                    <td> @Model.SubscriberType </td>
                    <td>
                        <a asp-controller="Invoice" asp-action="InvoiceList" asp-route-id="@Model.Id" class="btn btn-primary" style="color:brown; background:darkorange">@_localization.Getkey("ShowInvoices")</a>
                    </td>
                </tr>

            </tbody>
        </table>
    }
</div>
